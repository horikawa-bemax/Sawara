<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBack"
    android:orientation="vertical" >

    <Button
        android:id="@+id/new_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="?attr/newButtonBack" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/new_button"
        android:layout_toRightOf="@+id/new_button"
        android:background="@drawable/dummy_image"
        android:text="@string/return_button"
        android:textColor="?attr/mainColor" />

    <Button
        android:id="@+id/setting_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/new_button"
        android:layout_alignParentRight="true"
        android:background="?attr/settingButtonBack"
        android:text="@string/setting_button"
        android:textColor="?attr/baseColor" />
    
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/new_button"
        android:layout_toLeftOf="@+id/setting_button"
        android:background="@color/white"
        >       

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/gorst_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/theme_gorst_back_image" />
            <ImageView
                android:id="@+id/heart_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/theme_heart_back_image" />
            <ImageView
                android:id="@+id/star_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/theme_star_back_image" />
        </LinearLayout>
    </HorizontalScrollView>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:numColumns="4"
        android:stretchMode="columnWidth" >

    </GridView>

</RelativeLayout>