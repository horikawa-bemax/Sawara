<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@style/sawaraButton</item>
    </style>
    
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:button">@style/sawaraButton</item>
    </style>
    
    <style name="GorstTheme">
        <item name="mainColor">#220033</item> 
        <item name="baseColor">#AA88ff</item>
        <item name="buttonBack">@drawable/theme_default_button</item>
        <item name="mainBack">@drawable/theme_gorst_back_drawable</item>
        <item name="frameBack">@drawable/theme_gorst_frame</item>
    </style>
    
    <style name="HeartTheme">
        <item name="mainColor">#ffAAAA</item> 
        <item name="baseColor">#FFCCCC</item>
        <item name="buttonBack">@drawable/theme_default_button</item>
        <item name="mainBack">@drawable/theme_heart_back_drawable</item>   
        <item name="frameBack">@drawable/theme_heart_frame</item>
    </style>
    
    <style name="StarTheme">
        <item name="mainColor">#334499</item> 
        <item name="baseColor">#55ccff</item>
        <item name="buttonBack">@drawable/theme_default_button</item>
        <item name="mainBack">@drawable/theme_star_back_drawable</item>
        <item name="frameBack">@drawable/theme_default_frame</item>
    </style>
    
    <style name="DefaultTheme">
        <item name="mainColor">@color/main</item> 
        <item name="baseColor">@color/base</item>
        <item name="buttonBack">@drawable/theme_default_button</item>
        <item name="mainBack">@color/base</item>
        <item name="frameBack">@drawable/theme_default_frame</item>
    </style>
    
    <style name="sawaraButton">
        <item name="android:background">@drawable/theme_default_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>
